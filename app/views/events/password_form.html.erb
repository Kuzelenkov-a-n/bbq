<h1 class="mt-4 text-center">Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form mt-3">
    <%= label :pincode, 'Пин-код', class: 'font-weight-bold' %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= submit_tag :save, class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>

