<h1 class="mt-4 text-center"><%= t(".forgot_your_password") %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render partial: "partials/form_errors", locals: { model: @user } %>

  <div class="form mt-3">
    <%= f.label :email, class: "font-weight-bold" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= f.submit t(".send_me_reset_password_instructions"), class: "btn btn-primary my-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
