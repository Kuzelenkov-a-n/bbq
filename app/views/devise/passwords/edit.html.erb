<h2 class="mt-4 text-center">Измените Ваш пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-3">
    <%= f.label :password, 'New password' %>
    <% if @minimum_password_length %>
      <em>(Не менее <%= @minimum_password_length %> символов)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control' %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, 'Confirm new password' %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
  </div>

  <div class="actions mt-3 mb-3">
    <%= f.submit 'Готово', class: 'btn btn-primary my-1' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
