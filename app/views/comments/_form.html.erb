<%= form_for [@event, comment] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: comment } %>

  <div class="field mt-3">
    <%= f.label :body, class: 'font-weight-bold' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <% unless user_signed_in? %>
    <div class="field mt-3">
      <%= f.label :user_name, class: 'font-weight-bold' %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions mt-3 mb-3">
    <%= f.submit 'Отправить', class: 'btn btn-primary' %>
  </div>
<% end %>